<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txtWTCName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtWTCRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtWTCName"
        android:layout_below="@+id/txtWTCName"
        android:text="Relation"
        android:textColor="#FFF"
        android:textSize="13sp" android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txtWTCNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtWTCRelation"
        android:layout_below="@+id/txtWTCRelation"
        android:layout_marginTop="5dp"
        android:text="Phone number"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_places" />

</RelativeLayout>