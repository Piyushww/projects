<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:id="@+id/lytMainRating" android:padding="5dp">

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:textColor="#3371ab" android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txtAuthorReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" android:textColor="#3371ab" android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/lytTypeRating" android:orientation="horizontal" android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" android:background="#e4e4e4" android:layout_marginTop="5dp">
    </LinearLayout>

</LinearLayout>